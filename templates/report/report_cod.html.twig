{% extends 'base.html.twig' %}

{% block title %}รายการ COD{% endblock %}

{% block body %}
    <style>
        /* Simple CSS3 Fade-in-down Animation */
        .fadeInDown {
            -webkit-animation-name: fadeInDown;
            animation-name: fadeInDown;
            -webkit-animation-duration: 1s;
            animation-duration: 1s;
            -webkit-animation-fill-mode: both;
            animation-fill-mode: both;
        }

        @-webkit-keyframes fadeInDown {
            0% {
                opacity: 0;
                -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
            }
            100% {
                opacity: 1;
                -webkit-transform: none;
                transform: none;
            }
        }

        @keyframes fadeInDown {
            0% {
                opacity: 0;
                -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
            }
            100% {
                opacity: 1;
                -webkit-transform: none;
                transform: none;
            }
        }

        .hiddenRow {
            padding: 0 !important;
        }

        /* Simple CSS3 Fade-in Animation */
        @-webkit-keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @-moz-keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        .centered {
            margin-top: 5%;
        }

        .button {
            background-color: #1c87c9;
            border: none;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
        }

        .bg-white {
            background-color: #D8BFD8 !important;
        }

        .card-head {
            background-color: #7d56b1;
            color: #FFFFFF;
        }

        .bodyhead {
            background-color: #E6E6FA;
        }

        .card-all {
            background-color: #1579BB;
            color: #FFFFFF;
        }

        .card-waiting {
            background-color: #FBC411;
            color: #FFFFFF;
        }

        .card-transfered {
            background-color: #068717;
            color: #FFFFFF;
        }

        th {
            text-align: center;
            background-color: #181A92;
            color: #FFFFFF;
            font-size: 18px;
            padding-bottom: 5px !important;
            padding-top: 5px !important;

        }

        .text-header {
            color: #6c757d;
            font-size: 20px;
            text-align: center !important;

        }

        /*flip card*/
        .card-container {
            width: 100%; /* Adjust the target width*/
        }

        .flip-container {
            position: relative;
            perspective: 1000px;

        }

        /* flip the pane when hovered */
        .flip-container:hover .flipper, .flip-container.hover .flipper {
            transform: rotateY(180deg);
        }

        .flip-container, .front, .back {
            width: 100%;
            height: 150px;
        }

        /* flip speed goes here */
        .flipper {
            transition: 0.9s;
            transform-style: preserve-3d;
            position: relative;
        }

        /* hide back of pane during swap */
        .front, .back {

            backface-visibility: hidden;

            position: absolute;
            top: 0;
            left: 0;
        }

        /* front pane, placed above back */
        .front {
            background: white;
            z-index: 2;
            /* for firefox 31 */
            transform: rotateY(0deg);
        }

        /* back, initially hidden pane */
        .back {
            background: white;

            transform: rotateY(180deg);
        }

        .show-mobile {
            display: none;
        }

        @media screen and (max-width: 565px) and (min-width: 300px) {
            .show-desk {
                display: none;
            }

            .show-mobile {
                display: block;
                margin-bottom: 5px;
            }


        }

    </style>
    <div class="container fadeInDown centered">


        <div class="row" style="margin-top: 10px; margin-bottom: 13px;">
            <div class="col-sm-4 col-md-4"></div>
            <div class="col-sm-4 col-md-4" style="text-align: center;"><b class="text-header"
                                                                          style="margin-top: 20px; "><i
                            class="fa fa-address-card"></i> &nbsp;รายการ COD ที่จัดส่งสำเร็จ</b></div>
            <div class="col-sm-4 col-md-4"></div>
        </div>


        <div class=" justify-content-center">


            <div class="row">
                <div class="col-md-4 col-sm-4 col-xl-4">
                    <div class="card-container">
                        <div class="row">
                            <div class="col">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front">
                                            <div class="card-deck" style="margin-bottom: 10px;">
                                                <div class="card card-radius" style="text-align: center">
                                                    <div class="card-header card-all">
                                                        <b style="font-size: 18px">ALL</b>
                                                    </div>
                                                    <div class="card-body bodyhead">
                                                        {% if cod_data.all is defined %}
                                                            <a href="{{ path('report_all', {'filter': 'all' }) }}"><strong
                                                                        style="font-size: 18px">{{ (cod_data.all.count) | number_format(0, '.', ',') }}</strong></a>
                                                        {% else %}
                                                            <strong style="font-size: 18px">0</strong>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="back">
                                            <div class="card-deck" style="margin-bottom: 10px;">
                                                <div class="card card-radius" style="text-align: center">
                                                    <div class="card-header card-all">
                                                        <b style="font-size: 18px">มูลค่า COD</b>
                                                    </div>
                                                    <div class="card-body bodyhead">
                                                        {% if cod_data.all is defined %}
                                                            <a href="{{ path('report_all', {'filter': 'all' }) }}"><strong
                                                                        style="font-size: 18px">{{ cod_data.all.amt | number_format(2, '.', ',') }}
                                                                    ฿</strong></a>
                                                        {% else %}
                                                            <strong style="font-size: 18px">0 ฿</strong>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4 col-xl-4">
                    <div class="card-container">
                        <div class="row">
                            <div class="col">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front">
                                            <div class="card" style="text-align: center">
                                                <div class="card-header card-transfered">
                                                    <b style="font-size: 18px">TRANSFERED</b>
                                                </div>
                                                <div class="card-body bodyhead">
                                                    {% if cod_data.Y is defined %}
                                                        <a href="{{ path('report_all', {'filter': 'transfer' }) }}"><strong
                                                                    style="font-size: 18px">{{ cod_data.Y.count | number_format(0, ',') }}</strong></a>
                                                    {% else %}
                                                        <strong style="font-size: 18px">0 ฿</strong>
                                                    {% endif %}
                                                </div>
                                            </div>

                                        </div>
                                        <div class="back">
                                            <div class="card card-radius " style="text-align: center">
                                                <div class="card-header card-transfered">
                                                    <b style="font-size: 18px">มูลค่า COD</b>
                                                </div>
                                                <div class="card-body bodyhead">
                                                    {% if cod_data.Y is defined %}
                                                        <a href="{{ path('report_all', {'filter': 'transfer' }) }}"><strong
                                                                    style="font-size: 18px">{{ cod_data.Y.amt | number_format(2, '.', ',') }}
                                                                ฿</strong></a>
                                                    {% else %}
                                                        <strong style="font-size: 18px">0 ฿</strong>
                                                    {% endif %}
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4 col-xl-4">
                    <div class="card-container">
                        <div class="row">
                            <div class="col">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front">
                                            <div class="card card-radius " style="text-align: center">
                                                <div class="card-header card-waiting">
                                                    <b style="font-size: 18px">WAITING</b>
                                                </div>
                                                <div class="card-body bodyhead">
                                                    {% if cod_data.N is defined %}
                                                        <a href="{{ path('report_all', {'filter': 'waiting' }) }}"><strong
                                                                    style="font-size: 18px">{{ cod_data.N.count | number_format(0, ',') }}</strong></a>
                                                    {% else %}
                                                        <strong style="font-size: 18px">0</strong>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="back">
                                            <div class="card card-radius " style="text-align: center">
                                                <div class="card-header card-waiting">
                                                    <b style="font-size: 18px">มูลค่า COD</b>
                                                </div>
                                                <div class="card-body bodyhead">
                                                    {% if cod_data.N is defined %}
                                                        <a href="{{ path('report_all', {'filter': 'waiting' }) }}"><strong
                                                                    style="font-size: 18px">{{ cod_data.N.amt | number_format(2, '.', ',') }}
                                                                ฿</strong></a>
                                                    {% else %}
                                                        <strong style="font-size: 18px">0 ฿</strong>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>


            <div class="row" style="margin-top: 10px; margin-bottom: 13px;">
                <div class="col-sm-4 col-md-4"></div>
                <div class="col-sm-4 col-md-4" style="text-align: center;"><b class="text-header"
                                                                              style="margin-top: 20px; "><i
                                class="fa fa-address-card"></i> &nbsp;รายการโอน COD</b></div>
                <div class="col-sm-4 col-md-4"></div>
            </div>
            <div class="table-responsive-md">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th><label class="show-desk" style="margin-bottom: 0px;">วันที่โอนสำเร็จ</label><i
                                    class="fa fa-calendar fa-lg show-mobile" aria-hidden="true"></i></th>
                        <th><label class="show-desk" style="margin-bottom: 0px;">ยอดเงิน</label><i
                                    class="fa fa-money show-mobile" aria-hidden="true"></i></th>
                        <th><label style="margin-bottom: 0px;">Ref.</label></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if transfer_data is not empty %}
                        {% for cod in transfer_data %}
                            <tr>
                                {% if cod.tfd != null %}
                                    <td style="text-align: center">{{ cod.tfd | date('d-m-Y') }}</td>
                                {% else %}
                                    <td style="text-align: center">-</td>
                                {% endif %}
                                {% if cod.cod_amt != null %}
                                    <td style="text-align: center">{{ (cod.cod_amt) | number_format(2, '.', ',') }}</td>
                                {% else %}
                                    <td style="text-align: center">-</td>
                                {% endif %}
                                {% if cod.ref != null %}
                                    <td style="text-align: center"><a
                                                href="{{ path('report_cod_all', {'ref': cod.ref }) }}">
                                            <button style="padding: 4px 13px; border-radius: 20px; background:none; border: 5px solid #181a92; color: #181a92; font-size: 12px; text-transform: uppercase ; letter-spacing: 1px; font-weight: bold">
                                                detail
                                            </button>
                                        </a>
                                    </td>
                                {% else %}
                                    <td style="text-align: center">-</td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="3" style="text-align: center">ไม่พบข้อมูล</td>
                        </tr>
                    {% endif %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>ยอดทั้งหมด</th>
                        <th>{{ total | number_format(2, '.', ',') }}</th>
                        <th></th>
                    </tr>
                    </tfoot>
                </table>
                {{ knp_pagination_render(transfer_data) }}
            </div>


        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
